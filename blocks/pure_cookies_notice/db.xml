<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.concrete5.org/doctrine-xml/0.5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

	<table name="btPureCookiesNotice">
		<field name="bID" type="integer">
			<unsigned />
			<key />
		</field>
		<field name="title" type="string" size="255" />
		<field name="content" type="text" />
		<field name="agreeText" type="string" size="255" />
		<field name="position" type="string" size="32" />
		<field name="textColor" type="string" size="32" />
		<field name="linkColor" type="string" size="32" />
		<field name="backgroundColor" type="string" size="32" />
		<field name="interactionImpliesOk" type="boolean">
			<notnull />
		</field>
		<field name="sitewideCookie" type="boolean">
			<notnull />
		</field>
		<field name="onlyForEU" type="boolean">
			<notnull />
		</field>
        <field name="preConsentGtmBlacklist" type="text" />
		<field name="postConsentReload" type="boolean">
			<notnull />
		</field>
		<field name="postConsentGtmEventName" type="string" size="255" />
		<field name="postConsentJavascriptFunction" type="string" size="255" />
	</table>

</schema>

